{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "React Dev Server",
      "type": "shell",
      "isBackground": true,
      "group": "build",
      "problemMatcher": [
        "$eslint-stylish"
      ],
      "command": "yarn && BROWSER=none yarn start",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
      "options": {
          "cwd": "${workspaceFolder}/web"
      }
    }
  ]
}
